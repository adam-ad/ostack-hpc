#!../common/bats/bin/bats
# -*-sh-*-

load ../common/test_helper_functions || exit 1
source ../common/functions || exit 1

if [ -s ../TEST_ENV ];then
    source ../TEST_ENV
fi

@test "[warewulf] check for RPMs" {
    check_if_rpm_installed "warewulf-cluster${DELIM}"
    check_if_rpm_installed "warewulf-provision${DELIM}"
    check_if_rpm_installed "warewulf-provision-server${DELIM}"
    check_if_rpm_installed "warewulf-common${DELIM}"
    check_if_rpm_installed "warewulf-vnfs${DELIM}"
}

@test "[warewulf] Check binaries for tainted ENV" {
    wwsh file import /etc/os-release
    wwsh file show os-release
    wwsh -y file delete os-release
}
